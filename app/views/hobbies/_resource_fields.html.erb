<div class="nested-fields sortable-item trait-fields">
  <div class="row">
    <div class="col-md-6">
      <%= f.input :ref %>
    </div>
    <div class="col-md-6">
      <%= f.input :desc %>
    </div>
  </div>
  <%= f.input :position, :as => :hidden, input_html: { class: 'sortable-position' } %>
  <div class="text-right">
    <%= link_to_remove_association "remove resource", f, class: 'btn btn-danger' %>
  </div>
</div>
