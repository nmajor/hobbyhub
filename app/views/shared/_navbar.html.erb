<div class="navbar-wagon">
  <!-- Logo -->

  <div class="body">
    <div class="message"><%= @nav_message %></div>
    <div>
      <!-- <%= link_to root_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "logo.png" %>
      <% end %> -->
      <%= link_to "Next Hobby!", random_hobbies_path, class: "navbar-wagon-item navbar-wagon-button btn" %>
    </div>
  </div>

  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <% if user_signed_in? %>
      <% if policy(Hobby).index? %>
        <%= link_to "All Hobbies", hobbies_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>

      <% if policy(Hobby).new? %>
        <%= link_to "New Hobby", new_hobby_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>

      <%= link_to destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
      <% end %>
    <% else %>
      <!-- <%= link_to "Login", new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %> -->
    <% end %>
  </div>
</div>
